<section class="slice slice-lg sct-color-1">
    <div class="container">
        <div class="row">
            <div class="col-md-8">

                <div class="form-user style-1 rounded has-shadow-1">
                    <div class="form-header text-center">
                        <h2 class="form-header-title">Sign up</h2>
                    </div>
                    <div class="form-body col-md-4">

                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                          <%= render "devise/shared/error_messages", resource: resource %>
                     <div class="form-group has-icon">
                        <p><strong>Name</strong></p>
                        <label class="control-label sr-only" for="inputName">Name</label>
                        <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputName" %>
                        
                    </div>
                    <div class="form-group has-icon">
                        <p><strong>Email</strong></p>
                        <label class="control-label sr-only" for="inputEmail">Email</label>
                        <%= f.email_field :email, class:"form-control", id:"inputEmail" %>
                        
                    </div>
                    <div class="form-group has-icon">
                        <p><strong>Password</strong> (6 characters minimum)</p>
                        <label class="control-label sr-only" for="inputPassword">Password</label>
                        <%= f.password_field :password, autocomplete: "off", class:"form-control", id:"inputPassword" %>
                    
                    </div>
                    <div class="form-group has-icon">
                        <p><strong>Password confirmation</strong></p>
                        <label class="control-label sr-only" for="inputConfirmPassword">Password</label>
                        <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", id:"inputConfirmPassword" %>
                         
                    </div>
                        <%= f.submit "Sign up", class:"btn btn-lg btn-block btn-base-1 mt-20",  class: "btn btn-success" %><br>
                        <%= link_to 'Log in', new_user_session_path %>

                    <% end %>
                   </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
